<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <br>
  <br>
    <%= f.label :genre_id %>
  <%= f.text_field :genre_id, list: "genres_autocomplete" %> <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.id %>">
    <% end %>
  </datalist>

  <br>
  <br>
  <%= f.label :notes %><br>
  <!-- <input type="textarea" name="song[note_ids][]"><br>
  <input type="textarea" name="song[note_ids][]"><br>
  <input type="textarea" name="song[note_ids][]"><br> -->
  <br>
  <br>
  <br>
  <%= f.submit %>
<% end %>
